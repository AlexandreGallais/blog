{
  "$schema": "node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "shell": {
      "projectType": "application",
      "root": "projects/shell",
      "sourceRoot": "projects/shell/src",
      "prefix": "shell",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist/shell",
            "index": "projects/shell/src/index.html",
            "browser": "projects/shell/src/main.ts",
            "polyfills": [],
            "tsConfig": "projects/shell/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/shell/public"
              }
            ],
            "styles": ["projects/shell/src/styles.scss"],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "shell:build:production"
            },
            "development": {
              "buildTarget": "shell:build:development"
            }
          },
          "defaultConfiguration": "development"
        }
      }
    },
    "@alexandregallais/markdown-reader": {
      "projectType": "library",
      "root": "projects/alexandregallais/markdown-reader",
      "sourceRoot": "projects/alexandregallais/markdown-reader/src",
      "prefix": "mdr",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/alexandregallais/markdown-reader/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/alexandregallais/markdown-reader/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/alexandregallais/markdown-reader/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        }
      }
    },
    "@alexandregallais/utils": {
      "projectType": "library",
      "root": "projects/alexandregallais/utils",
      "sourceRoot": "projects/alexandregallais/utils/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/alexandregallais/utils/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/alexandregallais/utils/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/alexandregallais/utils/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/alexandregallais/utils/tsconfig.spec.json",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ]
          }
        }
      }
    }
  },
  "schematics": {
    "@schematics/angular:application": {
      "skipTests": true,
      "style": "scss",
      "standalone": true,
      "experimentalZoneless": true,
      "minimal": true,
      "routing": true,
      "serverRouting": false,
      "ssr": false,
      "strict": true
    },
    "@schematics/angular:component": {
      "displayBlock": true,
      "changeDetection": "OnPush",
      "skipSelector": true,
      "style": "scss",
      "type": "component",
      "skipTests": true
    },
    "@schematics/angular:class": {
      "skipTests": true
    },
    "@schematics/angular:directive": {
      "skipTests": true
    },
    "@schematics/angular:enum": {},
    "@schematics/angular:guard": {
      "functional": true,
      "implements": ["CanActivate"],
      "skipTests": true
    },
    "@schematics/angular:interceptor": {
      "functional": true,
      "skipTests": true
    },
    "@schematics/angular:interface": {},
    "@schematics/angular:library": {
      "standalone": true
    },
    "@schematics/angular:pipe": {
      "skipTests": true
    },
    "@schematics/angular:resolver": {
      "functional": true,
      "skipTests": true
    },
    "@schematics/angular:service": {
      "skipTests": true
    },
    "@schematics/angular:ng-new": {
      "skipTests": true
    },
    "@schematics/angular:web-worker": {
      "snippet": true
    }
  }
}
